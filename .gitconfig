[user]
  name = Ark
  email = target.ark@gmail.com
[core]
  editor = vim -c \"set fenc=utf-8\"
[alias]
  s = status -sb
  c = commit
  a = add
  d = diff
  l = log --graph --decorate=full --all --abbrev-commit
  ll = log --graph --decorate=full --all --abbrev-commit --oneline
  b = branch
  co = checkout

  # diff with side-by-side
  sd = !"git difftool -y -x \"colordiff -y -W `tput cols`\""
  # show <commit> with side-by-side
  show-y = !"f(){ git difftool -y -x \"colordiff -y -W `tput cols`\" $1~1 $1; }; f"
