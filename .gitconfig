[user]
  name = Ark
  email = target.ark@gmail.com
[core]
  editor = vim -c \"set fenc=utf-8\"
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = icdiff --line-numbers $LOCAL $REMOTE
[difftool "side-by-side-diff"]
  cmd = colordiff --side-by-side --width=`tput cols` $LOCAL $REMOTE
[alias]
  s = status -sb
  c = commit
  a = add
  d = diff
  l = !"GIT_PAGER='less -p \"\\(HEAD\"' git log --graph --decorate=full --all --abbrev-commit"
  ll = !"GIT_PAGER='less -p \"\\(HEAD\"' git log --graph --decorate=full --all --abbrev-commit --oneline"
  b = branch
  co = checkout

  # diff with side-by-side
  sd = !"f() { git difftool -t icdiff $@ | less; }; f"
  # show <commit> with side-by-side
  show-diff = !"f(){ rev=${1:-HEAD}; git difftool -t icdiff $rev~1 $rev | less; }; f"
